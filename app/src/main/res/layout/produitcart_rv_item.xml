<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/idProduit_cart_rv_item_layout">

    <TextView
        android:id="@+id/idTvQteVenduCart"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:foregroundGravity="center_vertical"
        android:text="3x"
        app:layout_constraintBottom_toBottomOf="@+id/idTvStockCart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/idTvDesignationCart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:maxLines="2"

        android:text="Antichock samsung galaxy S20   ultra"
        android:textColor="@color/black"

        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/idIvDeleteItemCart"
        app:layout_constraintStart_toEndOf="@+id/idTvQteVenduCart"
        app:layout_constraintStart_toStartOf="@+id/idTvStockCart"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/idTvStockCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Stock 100"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/idTvQteVenduCart"

        app:layout_constraintTop_toBottomOf="@+id/idTvDesignationCart" />

    <TextView
        android:id="@+id/idTvPrixVenteUniCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="3000 DZD"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/idTvStockCart"
        app:layout_constraintTop_toTopOf="@+id/idTvStockCart" />

    <ImageView
        android:id="@+id/idIvDeleteItemCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"



        app:layout_constraintBottom_toBottomOf="@+id/idTvPrixVenteUniCart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/idTvDesignationCart"
        app:srcCompat="@drawable/ic_delete_cart_item" />

    <TextView
        android:id="@+id/idTvPrixVenteQteAcheteCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="12000 DZD"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/idIvDeleteItemCart"
        app:layout_constraintTop_toTopOf="@+id/idTvPrixVenteUniCart" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="#A3A3A3"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/idTvPrixVenteUniCart" />
</androidx.constraintlayout.widget.ConstraintLayout>