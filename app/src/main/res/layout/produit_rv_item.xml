<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/produit_rv_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    tools:ignore="InvalidId">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



            <TextView
                android:id="@+id/idTvDesignationProduit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:padding="3dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/idBtnDeleteProduit"
                app:layout_constrainedWidth="true"
                app:layout_constraintHorizontal_bias="0.0"
                android:text="Designation : "
                android:textColor="@color/black" />


                <TextView
                    android:id="@+id/idTvPrixAchatProduit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/idTvQuantiteProduit"
                    android:text="Prix Achat    : "
                    app:layout_constraintEnd_toStartOf="@+id/idBtnDeleteProduit"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/idTvBarcodeProduit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    app:layout_constraintEnd_toStartOf="@+id/idBtnDeleteProduit"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/idTvDesignationProduit"
                    android:text="Barcode       : "
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/idTvPrixVenteProduit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/idTvPrixAchatProduit"
                    android:padding="3dp"
                    app:layout_constraintEnd_toStartOf="@+id/idBtnDeleteProduit"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:text="Prix Vente    : "
                    android:textColor="@color/black" />



            <TextView
                android:id="@+id/idTvQuantiteProduit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:text="Quantite       : "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/idBtnDeleteProduit"
                app:layout_constrainedWidth="true"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@id/idTvBarcodeProduit"
                android:textColor="@color/black" />


        <TextView
            android:id="@+id/idTvFamilleProduit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idTvPrixVenteProduit"
            android:padding="3dp"
            app:layout_constraintEnd_toStartOf="@+id/idBtnDeleteProduit"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_bias="0.0"
            android:text="Famille         : "
            android:textColor="@color/black" />



            <ImageView
                android:id="@+id/idBtnDeleteProduit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/ic_delete" />


            <ImageView
                android:id="@+id/idBtnEditProduit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="15dp"
                app:srcCompat="@drawable/ic_edit" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>